<% provide(:title, "All Questions") %>
<h1>Listing questions</h1>

<% if user_signed_in? %>
  <%= link_to 'New question', new_question_path, class: "btn btn-primary" %>
<% end %>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>User</th>
      <% if user_signed_in? %>
      <th colspan="2">Options</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= link_to question.title, question %></td>
        <td><%= question.content %></td>
        <td><%= question.user.email %></td>
        <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_question_path(question) %></td>
        <td><%= link_to 'Delete', question, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
