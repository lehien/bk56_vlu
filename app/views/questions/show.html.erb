<% provide(:title, @question.title ) %>
<p id="notice"><%= notice %></p>
<p>
    <h3><%= @question.title %></h3>
</p>
<div class="panel panel-info">
  <div class="panel-body">
    <%= @question.content %>
  </div>
  <div class="panel-footer">
    Posted by: <%= @question.user.email %>
  </div>
</div>

<% if user_signed_in? and current_user == @question.user  %>
  <%= link_to 'Edit', edit_question_path(@question), class: "btn btn-primary" %>
  <%= link_to 'Delete', @question, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>
<%= link_to 'Back', questions_path, class: "btn btn-default" %>
<%= link_to 'Answer', new_answer_path, class: "btn btn-primary" %>

<%= form_for([@question, @question.answers.build]) do |f| %>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h3> Answer</h3>
 <%= render :partial => @question.answers %>
