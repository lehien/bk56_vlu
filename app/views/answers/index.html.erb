<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.question %></td>
        <td><%= answer.title %></td>
        <td><%= answer.description %></td>
        <td><%= link_to 'Show', question_answer_path(answer.question, answer) %></td>
        <td><%= link_to 'Edit', edit_question_answer_path(answer.question, answer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_question_answer_path %>
